---
import Social from "../components/Social.astro";
import WorkCard from "../components/WorkCard.astro";
---

<!-- Top navigation -->
<header
  class="sticky top-0 z-40 bg-white/70 backdrop-blur border-b border-zinc-200/60"
>
  <div class="mx-auto max-w-7xl px-6">
    <div class="flex h-16 items-center justify-between">
      <a href="#top" class="font-semibold tracking-tight text-zinc-900"
        >Lucas Everett</a
      >
      <nav class="hidden md:flex items-center gap-6 text-sm text-zinc-700">
        <a href="#work" class="hover:text-zinc-900">Work</a>
        <a href="#about" class="hover:text-zinc-900">About</a>
        <a href="#skills" class="hover:text-zinc-900">Skills</a>
        <a href="#contact" class="hover:text-zinc-900">Contact</a>
      </nav>
      <div class="hidden md:block"><Social /></div>

      <!-- Mobile nav (no social) -->
      <nav
        class="flex md:hidden items-center gap-4 text-sm text-zinc-700 overflow-x-auto whitespace-nowrap"
        aria-label="Primary"
      >
        <a href="#work" class="hover:text-zinc-900">Work</a>
        <a href="#about" class="hover:text-zinc-900">About</a>
        <a href="#skills" class="hover:text-zinc-900">Skills</a>
        <a href="#contact" class="hover:text-zinc-900">Contact</a>
      </nav>
    </div>
  </div>
</header>

<!-- Hero -->
<section aria-label="Intro" class="bg-zinc-100">
  <div
    class="mx-auto max-w-7xl px-6 py-6 md:py-24 grid md:grid-cols-5 items-center gap-10"
  >
    <div class="md:col-span-3">
      <h1
        id="intro-heading"
        class="text-4xl md:text-5xl font-bold tracking-tight text-zinc-900"
      >
        Open‑source developer building beautiful tools for the web.
      </h1>
      <p class="mt-4 text-lg leading-relaxed text-zinc-700">
        I'm Lucas, a developer based in Nashville, Tennessee, where I split my
        time between creating popular browser extensions and supporting websites
        for financial institutions. My work ranges from Easy Speed Dial—used by
        thousands of people daily—to troubleshooting production websites for
        large banks and credit unions.
      </p>
      <div class="mt-6 flex flex-wrap items-center gap-3">
        <a
          href="https://easyspeeddial.com/"
          target="_blank"
          rel="noreferrer noopener"
          class="inline-flex items-center justify-center rounded-md bg-blue-600 px-4 py-2 text-white shadow-sm ring-1 ring-inset ring-blue-600/20 transition hover:bg-blue-700 focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500"
        >
          See Easy Speed Dial
        </a>
        <a
          href="#contact"
          class="inline-flex items-center justify-center rounded-md px-4 py-2 text-zinc-900 ring-1 ring-inset ring-zinc-300 transition hover:bg-white hover:ring-zinc-400 focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500"
        >
          Discuss opportunities
        </a>
      </div>
    </div>
    <div class="md:col-span-2 flex justify-center md:justify-end">
      <img
        src="/Lucas.png"
        alt="Portrait of Lucas Everett"
        class="size-56 md:size-72 rounded-full shadow-[0_0_0_8px_#fff] ring-1 ring-zinc-200 object-cover"
      />
    </div>
  </div>
</section>

<!-- Projects  -->
<section id="work" aria-labelledby="projects-heading" class="py-6 md:py-20">
  <div class="mx-auto max-w-7xl px-6">
    <h2
      id="projects-heading"
      class="text-2xl font-semibold tracking-tight text-zinc-900"
    >
      Work
    </h2>
    <div class="mt-6 grid gap-4 md:grid-cols-2">
      <div class="md:col-span-2">
        <WorkCard
          variant="featured"
          kind="Browser Extension"
          title="Easy Speed Dial"
          description="Easy Speed Dial replaces your new tab page with a clean grid of your bookmarks and folders. It’s ready to use out of the box, with optional customization for layouts, backgrounds, and themes. A privacy‑first approach keeps data on your device, and it works consistently across Chrome, Firefox, and Edge."
          tags={["WebExtensions API", "React", "TypeScript"]}
          links={[
            {
              href: "https://easyspeeddial.com",
              label: "Website",
              icon: "/icons/globe.svg",
            },
            {
              href: "https://github.com/lucaseverett/easy-speed-dial",
              label: "GitHub",
              icon: "/icons/github.svg",
            },
          ]}
          thumbnailSrc="/thumbs/easy-speed-dial.png"
          thumbnailAlt="Screenshot of Easy Speed Dial"
        />
      </div>
      <!-- Project cards -->
      <WorkCard
        kind="Library"
        title="Random Color Library"
        description="Lightweight library for color utilities and Material Design palette generation, built with a small modular core and accompanying tests for reliability."
        tags={["TypeScript"]}
        links={[
          {
            href: "https://randomcolorlibrary.com",
            label: "Website",
            icon: "/icons/globe.svg",
          },
          {
            href: "https://www.npmjs.com/package/random-color-library",
            label: "npm",
            icon: "/icons/store.svg",
          },
          {
            href: "https://github.com/lucaseverett/random-color-library",
            label: "GitHub",
            icon: "/icons/github.svg",
          },
        ]}
      />

      <WorkCard
        kind="Browser Extension"
        title="Easy Send Link"
        description="Send the current page via your default mail app in one click."
        tags={["WebExtensions API", "JavaScript"]}
        links={[
          {
            href: "https://easybrowserextensions.com",
            label: "Website",
            icon: "/icons/globe.svg",
          },
          {
            href: "https://chromewebstore.google.com/detail/easy-send-link/oojokgdfajbdmoembmnnhanompipcmii",
            label: "Chrome Web Store",
            icon: "/icons/store.svg",
          },
          {
            href: "https://github.com/lucaseverett/easy-send-link",
            label: "GitHub",
            icon: "/icons/github.svg",
          },
        ]}
      />

      <WorkCard
        kind="Browser Extension"
        title="Easy Open History"
        description="Open Chrome’s History page in one click."
        tags={["WebExtensions API", "JavaScript"]}
        links={[
          {
            href: "https://easybrowserextensions.com",
            label: "Website",
            icon: "/icons/globe.svg",
          },
          {
            href: "https://chromewebstore.google.com/detail/easy-open-history/ecdlpcaomkhpjfaflhmadakjgocgnpbg",
            label: "Chrome Web Store",
            icon: "/icons/store.svg",
          },
          {
            href: "https://github.com/lucaseverett/easy-open-history",
            label: "GitHub",
            icon: "/icons/github.svg",
          },
        ]}
      />

      <WorkCard
        kind="Browser Extension"
        title="Easy Open Bookmarks"
        description="Open Chrome’s Bookmarks page in one click."
        tags={["WebExtensions API", "JavaScript"]}
        links={[
          {
            href: "https://easybrowserextensions.com",
            label: "Website",
            icon: "/icons/globe.svg",
          },
          {
            href: "https://chromewebstore.google.com/detail/easy-open-bookmarks/fhflojkafggeikipigbihdlcedlfcfda",
            label: "Chrome Web Store",
            icon: "/icons/store.svg",
          },
          {
            href: "https://github.com/lucaseverett/easy-open-bookmarks",
            label: "GitHub",
            icon: "/icons/github.svg",
          },
        ]}
      />
    </div>
  </div>
</section>

<!-- About -->
<section
  id="about"
  aria-labelledby="about-heading"
  class="bg-zinc-100 py-6 md:py-20"
>
  <div class="mx-auto max-w-7xl px-6">
    <h2
      id="about-heading"
      class="text-2xl font-semibold tracking-tight text-zinc-900"
    >
      About
    </h2>
    <div class="mt-6 grid gap-10 md:grid-cols-3">
      <div class="md:col-span-2 text-zinc-700 leading-relaxed">
        <p>
          I'm currently a Client Website Administrator at <a
            href="https://www.jackhenry.com/"
            target="_blank"
            rel="noreferrer noopener"
            class="font-medium text-zinc-900 hover:underline"
            >Jack Henry & Associates</a
          >, where I've spent over 7 years supporting financial technology
          solutions. As the primary technical contact for 100+ financial
          institutions, I manage everything from troubleshooting front-end
          websites to estimating project costs and identifying growth
          opportunities.
        </p>
        <p class="mt-4">
          My role bridges technical expertise with client success. I solve
          intricate HTML, CSS, and JavaScript issues with client websites,
          maintain an internal React application, and provide training on the
          Banno Marketing platform. This experience has sharpened my ability to
          diagnose problems quickly, communicate technical concepts clearly, and
          deliver reliable results under pressure.
        </p>
        <p class="mt-4">
          In open source, I enjoy exploring modern web technologies and staying
          current with the evolving JavaScript and React ecosystem. Easy Speed
          Dial has given me opportunities to experiment with React patterns and
          new JavaScript features, while Random Color Library let me dive deeper
          into TypeScript's type system and unit testing.
        </p>
      </div>
      <div>
        <div class="text-sm font-semibold text-zinc-900">Strengths</div>
        <ul class="mt-3 space-y-2 text-zinc-700">
          <li>Expertise in HTML, CSS, and JavaScript/TypeScript</li>
          <li>Clear, empathetic technical communication</li>
          <li>Analytical, pragmatic problem solving</li>
          <li>Comfortable working solo or with a team</li>
        </ul>
      </div>
    </div>
  </div>
</section>

<!-- Skills -->
<section id="skills" aria-labelledby="skills-heading" class="py-6 md:py-20">
  <div class="mx-auto max-w-7xl px-6">
    <h2
      id="skills-heading"
      class="text-2xl font-semibold tracking-tight text-zinc-900"
    >
      Skills
    </h2>
    <ul class="mt-6 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
      {
        [
          { name: "HTML", icon: "/icons/html5.svg" },
          { name: "CSS", icon: "/icons/css3.svg" },
          { name: "JavaScript", icon: "/icons/javascript.svg" },
          { name: "TypeScript", icon: "/icons/ts-logo.svg" },
          { name: "React", icon: "/icons/react.svg" },
          { name: "Tailwind CSS", icon: "/icons/tailwind.svg" },
          { name: "Node.js", icon: "/icons/node.svg" },
          { name: "Git", icon: "/icons/git.svg" },
        ].map((skill) => (
          <li class="flex flex-col items-center justify-center gap-2 rounded-lg bg-zinc-100 p-5 text-sm font-medium text-zinc-900">
            <img src={skill.icon} alt={skill.name} class="h-8" />
            {skill.name}
          </li>
        ))
      }
    </ul>
  </div>
</section>

<!-- Contact -->
<section
  id="contact"
  aria-labelledby="contact-heading"
  class="py-6 md:py-20 bg-zinc-100"
>
  <div class="mx-auto max-w-7xl px-6">
    <h2
      id="contact-heading"
      class="text-2xl font-semibold tracking-tight text-zinc-900"
    >
      Contact
    </h2>
    <p class="mt-3 text-zinc-700">
      Interested in working together or have a question about my work? You can
      reach me through any of these channels:
    </p>
    <div class="mt-5">
      <Social />
    </div>
  </div>
</section>
